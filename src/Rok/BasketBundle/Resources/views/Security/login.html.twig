{% extends "RokBasketBundle::layout.html.twig" %}

{% block tekst %}
{% if error %}
    <div style="top: 1em;">{{ error.message }}</div>
{% endif %}

<form class="pure-form" action="{{ path('_security_check') }}" method="post">
    <label for="ime_priim">Username:</label>
    <input type="text" id="ime_priim" name="_username" value="{{ last_username }}" />

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit" class="pure-button pure-button-primary">login</button>
</form>
<p>V primeru, da se ne moreš prijaviti piši na admin@polzelabasket.org.uk</p>
{%  endblock tekst %}